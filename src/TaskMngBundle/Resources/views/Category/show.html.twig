{% extends '::base.html.twig' %}
{% block topmenu %}
    {% include 'TaskMngBundle::topmenu_logged.html.twig' %}
{% endblock %}
{% block content -%}
    <h3>Category</h3>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ category.name }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="nav nav-pills" role="tablist">
        <li role="presentation">
            <a class="label label-success" href="{{ path('category') }}">
                Back to Categories
            </a>
        </li>
        <li role="presentation">
            <a class="label label-success" href="{{ path('category_edit', { 'id': category.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
    <br>
{% endblock %}
